    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server Windows",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index-apiSample.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server Linux",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index-apiSample.js"
        },
        {
			"type": "node",
			"request": "attach",
			"name": "Attach",
			"restart": true,
			"port": 3000
		},
		{
			"type": "node",
			"request": "launch",
			// "protocol": "inspector",
			"name": "ES6 Debugger",
			"program": "${workspaceFolder}/index-apiSample.js",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
			// "runtimeArgs": ["--presets", "env"]
		}
    ]
}